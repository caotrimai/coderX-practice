extend ../layouts/common

block content
    if(user)
        h2=user.name
    h1 Users
    form(action="/users/search", method="get")
        input(type="text", name="name", id="nameInput")
        button Search
    a(href="/users/create") 
        button New
    ul
        each user in users
            li= user.name   
                a(href="/users/" + user.id) View

    script(type="text/javascript").
        let name  = document.getElementById('nameInput')
        name.value = localStorage.getItem('nameInput')
        name.addEventListener('keypress', function(){
            setTimeout(function(){ 
                localStorage.setItem('nameInput', name.value); 
            }, 300);
            });
