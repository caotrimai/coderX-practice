extends ../layouts/common.pug

block content
    h1 Create user

    if(errors)
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post", enctype="multipart/form-data")
        form-group
            label name 
            input#name.form-control(type="text", name="name", value=values? values.name : '')
        form-group
            label phone
            input#phone.form-control(type="text", name="phone", value=values? values.phone : '')
        form-group
            label avatar
            input#avatar.form-control-file(type="file", name="avatar", value=avatar? values.avatar : '')
        br
        button.btn.btn-primary(type="submit") OK